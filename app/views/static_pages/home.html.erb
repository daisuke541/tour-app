<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="post_form">
        <%= render 'shared/post_form' %>
      </section>
    </aside>
    
    
    
    <div class="col-md-8">
      <h3>Post Feed</h3>
      <%= render 'shared/search' %>
      <div class="search">
      <%= render 'shared/feed' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="btn center-block">
    <h1>
      <%= link_to "関東カルト", root_path %>
      </h1>
    

    <h2>
      みんなで非日常な思い出を共有しよう
    </h2>
    
    
    <h3 class="btn">
    <%= link_to "登録はコチラ", signup_path, class: "btn btn-lg btn-default btn-block" %>
  
  
    <%= link_to "ゲストログイン", guest_log_in_path, method: :post, class: "btn btn-lg btn-default btn-block" %>
    </h3>
    <style>
            div {width: 400px; height: 300px;}
    </style>
        
  </div>
  
  
<% end %>