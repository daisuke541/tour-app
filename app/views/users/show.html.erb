<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
     <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  
<div class="col-md-8">
  <%= render 'follow_form' %>
  <% if @user.posts.any? %>
  <h3>投稿 (<%= @user.posts.count %>)</h3>
  
  <!-- 投稿検索機能-->
  <p>投稿を検索する</p>
  <%= form_tag user_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "投稿検索", :name => nil %>
  </p>
  <% end %>
  
  <ol class="posts">
  <%= render @posts %>
  </ol>
  <%= link_to @post, post_path %>
  <%= will_paginate @posts %>
  <% end %>
  </div>
</div>
