<div class="index">
<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>


<!-- ユーザー検索機能 -->
<p>ユーザー検索</p>
<%= form_tag users_path, :method => 'get' do %>
<%= text_field_tag :search %>
<%= submit_tag "検索", :name => nil %>
<% end %>

<ul class="users">
  <% @users.each do |user| %>
  <%= render @users %>
  <% end %>
</ul>

<%= will_paginate %>
</div>